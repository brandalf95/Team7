@model IEnumerable<Team7_LonghornMusic.Models.AlbumReview>

@{
    ViewBag.Title = "Index";
}

<h2>Album Reviews</h2>

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<table class="table">
    <tr>
        <th>
            Album Title
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        @if (User.IsInRole("Employee"))
        {
            <th>Reviewer</th>
        }
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            @if (User.IsInRole("Employee"))
            {
                <td>
                    @Html.DisplayFor(modelItem => item.User.LName)
                </td>
            }
            @if (User.IsInRole("Employee"))
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AlbumReviewID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AlbumReviewID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AlbumReviewID })
                </td>
            }
        </tr>
    }

</table>

@model IEnumerable<Team7_LonghornMusic.Models.AlbumReview>

@{
    ViewBag.Title = "MyReviewIndex";
}

<h2>My Album Reviews</h2>



<table class="table">
    <tr>
        <th>
            Album Title
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>Reviewer</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.LName)
            </td>
            <td>
                <input type="button" class="btn btn-primary" value="Edit" onclick="location.href='@Url.Action("Edit", "AlbumReviews", new { id = item.AlbumReviewID }, null)'" />

                <input type="button" class="btn btn-primary" value="Details" onclick="location.href='@Url.Action("Details", "AlbumReviews", new { id = item.AlbumReviewID }, null)'" />


            </td>
        </tr>
    }

</table>





<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Longhorn Music", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.IsInRole("Customer"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Songs", "Index", "Songs")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Albums", "Index", "Albums")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Artists", "Index", "Artists")</li>
                    </ul>
                }
                @if (User.IsInRole("Employee"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Edit Content", "ContentHome", "Home")</li>
                    </ul>
                }

                @if (User.IsInRole("Employee"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Edit Reviews", "ReviewHome", "Home")</li>
                     </ul>
                }
                @if (User.IsInRole("Customer"))
                {   <ul class="nav navbar-nav">                   
                        <li>@Html.ActionLink("My Shopping Cart", "ShoppingCart", "OrderDetails", new { UserName = User.Identity.Name }, null)</li>                  
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("My Music", "MyMusic", "OrderDetails", new { UserName = User.Identity.Name }, null)</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Order History", "OrderHistory", "OrderDetails", new { UserName = User.Identity.Name }, null)</li>
                    </ul>
                }
                @if (User.IsInRole("Employee"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Edit Customer Database", "Index", "AppUsers")</li>
                    </ul>
                }
                @if (User.IsInRole("Manager"))
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Edit Employee Database", "EmployeeIndex", "AppUsers")</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("View Reports", "ReportHome", "Home")</li>
                    </ul>
                }
                @*<ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("Edit Password", "Index", "Account")</li>
                }
                </ul>*@
                <ul class="nav navbar-nav">
                @if (User.Identity.IsAuthenticated)
                {
                    <li>@Html.ActionLink("My Account", "MyAccountIndex", "AppUsers")</li>
                }                   
                </ul>
                
               
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Longhorn Music</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
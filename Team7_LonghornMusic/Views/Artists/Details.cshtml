@model Team7_LonghornMusic.Models.Artist

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="dl-horizontal">
       <dt>
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt>
            Artist Rating
        </dt>
    </dl>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Genre
            </th>
        </tr>
        @foreach (var item in Model.ArtistGenres)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
            </tr>
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Albums
            </th>
        </tr>
        @foreach (var item in Model.ArtistAlbums)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.AlbumTitle)</td>
                <td>@Html.ActionLink("View This Album", "Details", "Albums", new { id = item.AlbumID }, null)</td>
            </tr>
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Songs
            </th>
        </tr>
        @foreach (var item in Model.ArtistSongs)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.SongTitle)</td>
            </tr>
        }
    </table>


    <p>
        @Html.ActionLink("Review this Artist", "Create", "ArtistReviews")
    </p>


    <table class="table table-bordered">
        <tr>
            <th>
                Artist Reviews
            </th>
        </tr>
        @foreach (var item in Model.ArtistReviews)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArtistID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

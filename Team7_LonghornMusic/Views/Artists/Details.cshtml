@model Team7_LonghornMusic.Models.Artist

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Artist</h4>
    <hr />
    <dl class="dl-horizontal">
       <dt>
            @Html.DisplayNameFor(model => model.ArtistName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ArtistName)
        </dd>
        <dt>
            Artist Rating
        </dt>
        <dt>
            
        </dt>
    </dl>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Genre
            </th>
        </tr>
        @foreach (var item in Model.ArtistGenres)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.GenreName)</td>
            </tr>
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Albums
            </th>
        </tr>
        @foreach (var item in Model.ArtistAlbums)
        {
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.AlbumTitle)</td>*@
                <td>@Html.ActionLink(item.AlbumTitle, "Details", "Albums", new { id = item.AlbumID }, null)</td>
            </tr>
        }
    </table>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Songs
            </th>
        </tr>
        @foreach (var item in Model.ArtistSongs)
        {
            <tr>
                @*<td>@Html.DisplayFor(modelItem => item.SongTitle)</td>*@
                <td>@Html.ActionLink(item.SongTitle, "Details", "Songs", new { id = item.SongID }, null)</td>
            </tr>
        }
    </table>


    <p>
        @Html.ActionLink(
       linkText: "Review this Artist", 
       actionName: "Create", 
       controllerName: "ArtistReviews", 
       routeValues: new { ArtistID = Model.ArtistID, UserID = User.Identity.Name },
        htmlAttributes: null)
       
    </p>

    <h3>Reviews</h3>
    <table class="table table-bordered">
        <tr>
            <th>
                Artist Rating
            </th>
            <th>
                Artist Comments
            </th>
        </tr>
        @foreach (var item in Model.ArtistReviews)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.Comment)</td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ArtistID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

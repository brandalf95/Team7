@model Team7_LonghornMusic.Models.ShoppingCartViewModel
@{
    Layout = null;
}


<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShoppingCart</title>
</head>
<table class="table">
    <tr>
        <th>
            Song Title
        </th>
        <th>
            Song Price
        </th>
        <th>
            Album Title
        </th>
        <th>
            Album Price
        </th>
        @*<th>
                Genre
            </th>*@
        @*<th>
                Rating
            </th>*@

    </tr>


    <tr>
        <td>
            @foreach (var x in Model.OrderDetail.Discounts)
            {@Html.DisplayFor(modelItem => x.Song.SongTitle) }
        </td>
        @*<td>
                @Html.DisplayFor(modelItem => item.IsFeatured)
            </td>*@
        <td>
            @foreach (var x in Model.OrderDetail.Discounts)
            {@Html.DisplayFor(modelItem => x.Song.SongPrice) }
        </td>

        <td>
            @foreach (var x in Model.OrderDetail.Discounts)
            {@Html.DisplayFor(modelItem => x.Album.AlbumTitle) }
        </td>
        <td>
            @foreach (var x in Model.OrderDetail.Discounts)
            {@Html.DisplayFor(modelItem => x.Album.AlbumPrice) }
        </td>
        <td></td>

        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id = item.Song.SongID }) |
                @Html.ActionLink("Details", "Details", new { id = item.Song.SongID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Song.SongID })*@
        </td>



</table>
@Html.DisplayFor(model => model.SubTotal)
@Html.DisplayFor(model => model.Tax)
@Html.DisplayFor(model => model.Total)
@Html.DisplayFor(model => model.OrderDetail.CreditCardNumber)

@Html.ActionLink("Confirm", "ConfirmScreen", "OrderDetails", new { id = Model.OrderDetail.OrderDetailID }, null)


@model Team7_LonghornMusic.Models.Album

@{
    ViewBag.Title = "SongSelection";
}

<h2>Song Selection</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.AlbumID);
<div class="form-group">
    @Html.LabelFor(model => model.AlbumSongs, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.ListBox("SelectedSongs", (MultiSelectList)ViewBag.AllSongs, @*new { @class = "form-control" },*@ new { @style = "height: 400px;" })
    </div>
</div>

<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</div>
}

